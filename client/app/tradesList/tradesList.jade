div(ng-include='"components/navbar/navbar.html"')

.container
  .row
    .col-lg-12
      p
        i (Make trade requests from the "All Books" page)
      h2 Incoming Trade Requests
      ul
        li(ng-repeat="tradeBook in incomingTrades") {{tradeBook.name}} {{tradeBook.bookId}} (requester: {{tradeBook.borrowerId}}) 
          a(ng-click="accept(tradeBook)") accept
          | |
          a(ng-click="reject(tradeBook)") reject
      hr
        
      h2 Outgoing Trade Requests
      ul
        li(ng-repeat="tradeBook in outgoingTrades | orderBy:'status'") {{tradeBook.name}} ({{tradeBook.status}})
